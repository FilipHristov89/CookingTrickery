@model CreateIngredientViewModel

@{
    ViewBag.Title = "Create Ingredient";
}

<h1>@ViewBag.Title</h1>
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">ImageUrl</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-5">
                <label asp-for="@Model.Type" class="form-label">Type</label>
                <select asp-for="@Model.Type" class="form-control" aria-required="true">
                    @{
                        var options = Html.GetEnumSelectList<IngredientTypeEnum>();
                        @foreach (var option in options)
                        {
                            <option value="@option.Value">@option.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Calories" class="form-label">Calories</label>
                <input asp-for="@Model.Calories" class="form-control" aria-required="true" />
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Origin" class="form-label">Origin</label>
                <input asp-for="@Model.Origin" class="form-control" aria-required="true" />
                <span asp-validation-for="Origin" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>