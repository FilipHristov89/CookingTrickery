@model IEnumerable<RecipePreviewViewModel>

@{
    ViewBag.Title = "My Favorites";
}

<div>
    <div>
        <div>
            @if (Model.Count() == 0)
            {
                <p>No Recipes Yet</p>
                <p>Click the button and start browse through the recipes!</p>
                <a asp-area="" asp-controller="Recipe" asp-action="All">
                    <input type="button" value="All Recipes" />
                </a>
            }
            else
            {
                @foreach (var recipe in Model)
                {
                    <div>
                        <a class="recipe-link" asp-area="" asp-controller="Recipe" asp-action="Recipe" asp-route-id="@recipe.Id">
                            <div>
                                <img src="@recipe.ImageUrl">
                            </div>
                            <div>
                                <p>@recipe.Name</p>
                                <p>@recipe.QuickDescription</p>
                                <p>@recipe.Cuisine</p>
                                <p>@recipe.User</p>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div>

