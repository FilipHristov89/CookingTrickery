@{
    ViewBag.Title = "Admin Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - Here you can all <b>recent</b> <b>recipes</b>,
        <b>ingredients</b> and <b>cuisines</b>.
        <br />
    </p>
    <p class="lead mt-1">
        You can also manage the <b>users</b> too!.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Recipe" asp-action="All"
       class="btn btn-primary btn-lg">All Recipes</a>
    <a asp-area="" asp-controller="Ingredient" asp-action="AllIngredients"
       class="btn btn-primary btn-lg">All Recipes</a>
    <a asp-area="" asp-controller="Cuisine" asp-action="Cuisines"
       class="btn btn-primary btn-lg">All Cuisines</a>
    <span>  |   </span>
    <a asp-area="Administration" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
    <span>  |   </span>
</div>
